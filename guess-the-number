import random  # Импорт модуля random для генерации случайных чисел

# Основная функция игры "Угадай число"
def guess_the_number():
    secret_number = random.randint(1, 100)  # Компьютер загадывает случайное число от 1 до 100
    attempts = 7  # Устанавливаем лимит на количество попыток

    # Приветствие и правила игры
    print("Добро пожаловать в игру 'Угадай число'!")
    print("Я загадал число от 1 до 100.")
    print(f"У вас {attempts} попыток, чтобы угадать его.")

    # Основной игровой цикл — пользователь делает догадки
    for attempt in range(1, attempts + 1):
        try:
            # Получаем ввод от пользователя и преобразуем его в целое число
            guess = int(input(f"Попытка {attempt}: Введите ваше число: "))
            # Проверка: введённое число должно быть в допустимом диапазоне
            if guess < 1 or guess > 100:
                print("Пожалуйста, введите число от 1 до 100!")
                continue  # Пропускаем текущую итерацию и просим ввести заново
        except ValueError:
            # Обработка случая, когда пользователь вводит не число (например, текст)
            print("Пожалуйста, введите целое число!")
            continue

        # Сравнение догадки пользователя с загаданным числом
        if guess < secret_number:
            print("Слишком маленькое число!")  # Число меньше загаданного
        elif guess > secret_number:
            print("Слишком большое число!")  # Число больше загаданного
        else:
            # Игрок угадал число — поздравляем и выходим из цикла
            print(f" Поздравляем! Вы угадали число {secret_number} за {attempt} попыток!")
            break
    else:
        # Блок else выполняется, если цикл завершился без команды break (т.е. число не угадано)
        print(f" Вы проиграли! Загаданное число было: {secret_number}")

# Запуск игры, если скрипт запускается напрямую
if __name__ == "__main__":
    guess_the_number()
